##################### FIRST LINE #####################################

#### Install packages
PackagesManage install "sudo git-core dos2unix lsb-release screen ccze gnupg figlet mlocate subversion htop build-essential automake libtool manpages-fr pkg-config curl unzip zip iperf dnsutils csvtool whois vim nano ntpdate update-notifier-common debian-goodies rkhunter bridge-utils libxml2-dev libsigc++-2.0-dev libncurses5-dev libxmlrpc-c3-dev libcppunit-dev gnupg-curl python debianutils coreutils mailutils"

PackagesManage install "rar"
if [ $? -gt 0 ]; then
	PackagesManage install "rar-free"
fi

PackagesManage install "unrar"
if [ $? -gt 0 ]; then
	PackagesManage install "unrar-free"
fi

#### Purge packages
PackagesManage purge "heirloom-mailx"

# -----------------------------------------
source /etc/MySB/inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################
